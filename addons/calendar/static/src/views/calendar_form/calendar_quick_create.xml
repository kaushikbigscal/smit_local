<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Template for activity creation - shows both Save and Discard -->
    <t t-name="calendar.CalendarActivityCreateButtons" t-inherit="web.FormViewDialog.ToOne.buttons">
        <!-- Keep both Save and Discard buttons visible (default behavior) -->
    </t>

    <!-- Template for rule creation - shows only Discard -->
    <t t-name="calendar.CalendarRuleCreateButtons" t-inherit="web.FormViewDialog.ToOne.buttons">
        <!-- Hide Save button, show only Discard -->
        <xpath expr="//button[contains(@class, 'o_form_button_save')]" position="attributes">
            <attribute name="t-attf-style">display: none</attribute>
        </xpath>

        <!-- Keep Discard button visible -->
        <xpath expr="//button[contains(@class, 'o_form_button_cancel')]" position="attributes">
            <attribute name="t-attf-style">display: inline-block</attribute>
        </xpath>
    </t>
</templates>


