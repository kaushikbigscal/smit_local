<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_send_holiday_notifications" model="ir.cron">
        <field name="name">Send Holiday Notifications</field>
        <field name="model_id" ref="data_recycle.model_resource_calendar_leaves"/>
        <field name="state">code</field>
        <field name="code">model.send_holiday_notifications()</field>
        <field name="interval_type">days</field>
        <field name="interval_number">1</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=30, second=0, microsecond=0)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="active" eval="True"/>
    </record>
</odoo>