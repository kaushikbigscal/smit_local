<odoo>
    <data>
        <record id="xml_upload_tree" model="ir.ui.view">
            <field name="name">Uploaded XML File Tree</field>
            <field name="model">xml.upload</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="xml_file"/>
                </tree>
            </field>
        </record>

        <record id="xml_upload_form" model="ir.ui.view">
            <field name="name">Uploaded XML File Form</field>
            <field name="model">xml.upload</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">

                            <group>
                                <field name="name" string="File Name"/>
                                <field name="xml_file" string="File"/>
                                <field name="model_id" string="Model"/>

                                <field name="report_action" string="Report Template"/>

                                <div style="width: 100px;">

                                    <button
                                            string="Load File"
                                            type="object"
                                            name="upload_and_parse_xml"
                                            class="btn-primary width: 100px;"

                                    />
                                </div>

                                    <button
                                            type="object"
                                            string="Preview"
                                            name="download_report"
                                            class="btn-primary"
                                            icon="fa-download"
                                            style="margin-left: 10px;"/>


                            </group>

                            <sheet>
                                <group>
                                    <field name="xml_content"
                                           widget="text"
                                           readonly="0"
                                           style="min-height: 350px; width: 100%;"/>
                                </group>
                            </sheet>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="xml_upload_mapping" model="ir.actions.act_window">
            <field name="name">Customizer</field>
            <field name="res_model">xml.upload</field>
            <field name="view_mode">tree,form</field>
        </record>

    <menuitem
            id="menu_document_customizer"
            name="Document Customizer"
            parent="menu_data_cleaning_root"
            action="data_recycle.xml_upload_mapping"
            sequence="6"/>
    </data>
</odoo>