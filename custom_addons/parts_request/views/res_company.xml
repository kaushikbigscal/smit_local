<odoo>
    <record id="view_company_form_inherit_warehouse" model="ir.ui.view">
        <field name="name">res.company.form.inherit.warehouse</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="after">
                <group string="Warehouse" name="warehouse" >
                    <field name="enable_warehouse" widget="radio"/>
                    <field name="enable_direct_pickup" />
                    <field name="enable_shipment_to_customer" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_hr_employee_warehouse_manager" model="ir.ui.view">
        <field name="name">view.hr.employee.warehouse.manager</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="warehouse_manager" />
            </xpath>
        </field>
    </record>

    <record id="view_stock_warehouse_manager_form" model="ir.ui.view">
        <field name="name">view.stock.warehouse.manager.form</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="manager" widget="many2one_avatar_user"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_warehouse_manager_tree" model="ir.ui.view">
        <field name="name">view.stock.warehouse.manager.tree</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="manager" widget="many2one_avatar_user"/>
            </xpath>
        </field>
    </record>

</odoo>