<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_order_form_inherit_warranty" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.warranty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add warranty dates in sale order header -->
            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="warranty_start_date"/>
            </xpath>

            <!-- Add warranty fields in order lines -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                <field name="warranty_period" string="Warranty (Months)"/>
                <field name="line_warranty_end_date" readonly="1"/>
            </xpath>

            <!-- Add warranty fields in order line form -->
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                <label for="warranty_period"/>
                <div class="o_row">
                    <field name="warranty_period"/>
                    <span>Months</span>
                </div>
                <field name="line_warranty_end_date" readonly="1"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='product_uom_qty']"
                   position="after">
                <field optional="show" name="unit_status" widget="selection"/>
                <field name="number_of_call" optional="show"
                       invisible="unit_status not in ('warranty', 'amc')"/>
                <field name="number_of_month" optional="show"
                       invisible="unit_status not in ('warranty', 'amc')"/>

                <field name="next_call_date" optional="hide" readonly="0"/>
                <field name="call_counter" optional="hide" readonly="0"/>

            </xpath>
        </field>
    </record>

</odoo>



