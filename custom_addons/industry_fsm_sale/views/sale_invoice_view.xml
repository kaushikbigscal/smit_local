<?xml version="1.0" encoding="utf-8"?>

<!--all code in this file is custom code-->

<odoo>
    <record id="view_move_form_inherit_warranty" model="ir.ui.view">
        <field name="name">account.move.form.inherit.warranty</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add warranty dates in invoice header -->
            <xpath expr="//group/group[@id='header_right_group']" position="inside">
                <field name="warranty_start_date"/>
            </xpath>

            <!-- Add warranty fields in invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='price_unit']" position="after">
                <field name="warranty_period" string="Warranty (Months)"/>
                <field name="line_warranty_end_date" readonly="1"/>
            </xpath>

            <!-- Add warranty fields in invoice line form -->
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='price_unit']" position="after">
                <label for="warranty_period"/>
                <div class="o_row">
                    <field name="warranty_period"/>
                    <span>Months</span>
                </div>
                <field name="line_warranty_end_date" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
