<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.industry.fsm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="priority" eval="75"/>  <!-- below project -->
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="industry_fsm" string="Service Call" name="industry_fsm"
                     groups="industry_fsm.group_fsm_manager">
                    <block title="Service Call" id="fsm_tasks_management">
                        <setting
                                help="Keep track of the products used for your tasks, and invoice your time and material to your customers"
                                documentation="/applications/services/fsm/sales/onsite_tasks_from_sales_orders.html">
                            <field name="module_industry_fsm_sale"/>
                        </setting>
                        <setting help="Create new quotations directly from your tasks">
                            <field name="group_industry_fsm_quotations"/>
                        </setting>
                        <!--                        <setting name="module_industry_fsm_report" help="Create custom worksheet templates">-->
                        <!--                            <field name="module_industry_fsm_report"/>-->
                        <!--                        </setting>-->
                    </block>
                    <block title="Call Stages" id="custom_stage_records">

                        <setting name="Enabled Planned Stage"
                                 help="When Enabled this stage then Show this Planned Stage in Service Form">
                            <field name="service_planned_stage"/>
                        </setting>

                        <setting name="Enabled Resolved Stage"
                                 help="when Enabled this stage that Mark calls as Done on Resolve Stage">
                            <field name="service_resolved_stage"/>
                        </setting>

                        <setting name="Blocked By">
                            <field name="service_call_dependencies"/>
                        </setting>

                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
