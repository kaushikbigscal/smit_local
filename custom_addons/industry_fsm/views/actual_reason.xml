<odoo>
    <!-- Tree View-->
    <record id="view_actual_tree" model="ir.ui.view">
        <field name="name">view.actual.tree</field>
        <field name="model">actual.problem</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_actual_type_form" model="ir.ui.view">
        <field name="name">view.actual.type.form</field>
        <field name="model">actual.problem</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    Action-->
    <record id="action_actual_type" model="ir.actions.act_window">
        <field name="name">Actual Problem</field>
        <field name="res_model">actual.problem</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_config_actual_problem"
              name="Actual Problem"
              parent="fsm_menu_settings"
              sequence="70"
              groups="industry_fsm.group_fsm_supervisor"
              action="action_actual_type"/>
</odoo>