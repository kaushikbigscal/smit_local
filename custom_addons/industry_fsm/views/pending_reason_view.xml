<odoo>
    <!-- Tree View-->
    <record id="view_pending_tree" model="ir.ui.view">
        <field name="name">view.pending.tree</field>
        <field name="model">pending.reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_pending_type_form" model="ir.ui.view">
        <field name="name">view.pending.type.form</field>
        <field name="model">pending.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    Action-->
    <record id="action_pending_type" model="ir.actions.act_window">
        <field name="name">Pending Reason</field>
        <field name="res_model">pending.reason</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_config_pending_reason"
              name="Pending Reason"
              parent="fsm_menu_settings"
              sequence="70"
              groups="industry_fsm.group_fsm_supervisor"
              action="action_pending_type"/>
</odoo>