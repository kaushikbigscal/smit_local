<?xml version="1.0" encoding="utf-8"?>
<data>
    <record id="hr_timesheet_switch_form" model="ir.ui.view">
        <field name="name">hr.timesheet.switch resume form</field>
        <field name="model">hr.timesheet.switch</field>
        <field name="inherit_id"/>
        <field name="arch" type="xml">
            <form>
                <field name="is_end_work" invisible="1"/>
                <sheet>
                    <div class="oe_title" modifiers="{}">
                        <label class="oe_edit_only" for="name"/>
                        <h1>
                            <field name="name" readonly="is_end_work"/>
                        </h1>
                    </div>
                    <group colspan="4">
                        <field name="project_id" required="1" readonly="is_end_work"/>
                        <field name="task_id" readonly="is_end_work"/>
                        <field name="date_time" readonly="1"/>
                        <field name="date_time_end" readonly="1" invisible="not is_end_work"/>
                        <field name="name" readonly="is_end_work"/>
                        <field name="end_time_name" readonly="not is_end_work" required="is_end_work" invisible="not is_end_work"/>

                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="company_id" invisible="1"/>
                        <!--          ....................................................              -->
                        <field name="actual_problem" invisible="not is_end_work" />
                        <field name="problem_solution" invisible="not is_end_work" required="is_end_work"/>

                        <field name="latitude" readonly="1" />
                        <field name="longitude" readonly="1"/>
                        <field name="location_name" readonly="1"/>
                        <!--          ....................................................              -->

                    </group>
                    <group name="messages" string="Previous timer"
                           invisible="running_timer_id == False and not is_end_work" col="4">
                        <p colspan="4" invisible="is_end_work">
                            You have a running timer called
                            <field name="running_timer_id" class="oe_inline"
                                   context="{'form_view_ref': 'hr_timesheet.hr_timesheet_line_form'}"/>
                            and started at
                            <field name="running_timer_start" class="oe_inline"/>.
                            If you continue, it will be stopped with
                            <strong>
                                <field name="running_timer_duration" class="oe_inline text-info" widget="float_time"
                                       invisible="running_timer_duration &gt;= 5"/>
                                <field name="running_timer_duration" class="oe_inline text-warning" widget="float_time"
                                       invisible="running_timer_duration &lt; 5"/>
                                hour(s).
                            </strong>
                        </p>
                        <p colspan="4" invisible="not is_end_work">
                            You are ending the timer
                            <field name="running_timer_id" class="oe_inline"
                                   context="{'form_view_ref': 'hr_timesheet.hr_timesheet_line_form'}"/>
                            that started at
                            <field name="running_timer_start" class="oe_inline"/>.
                        </p>
                        <div class="alert alert-warning" colspan="4" role="alert"
                             invisible="running_timer_duration &lt; 5">
                            That is a lot of time! Make sure it is fine before saving.
                        </div>
                    </group>
                </sheet>
                <footer>
                    <!-- Start work buttons -->
                    <button name="action_switch" type="object"
                            invisible="running_timer_id != False or is_end_work"
                            string="Start new timer" class="oe_highlight"/>
                    <button name="action_switch" type="object"
                            invisible="running_timer_id == False or running_timer_duration &gt;= 5 or is_end_work"
                            string="Stop previous timer and start the new one" class="oe_highlight"/>
                    <button name="action_switch"
                            confirm="The previous timer is old. Do you really want to stop it now?"
                            type="object"
                            invisible="running_timer_id == False or running_timer_duration &lt; 5 or is_end_work"
                            string="Stop that very old timer and start the new one" class="btn-warning"/>

                     End work button
                    <button name="action_switch" type="object"
                            invisible="not is_end_work"
                            string="End Timer" class="oe_highlight"/>

                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Start Work Action -->
    <record id="hr_timesheet_switch_action" model="ir.actions.act_window">
        <field name="name">Start work</field>
        <field name="res_model">hr.timesheet.switch</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">form</field>
        <field name="context">{'show_created_timer': True}</field>
    </record>

    <!-- End Work Action -->
    <record id="hr_timesheet_switch_end_action" model="ir.actions.act_window">
        <field name="name">End work</field>
        <field name="res_model">hr.timesheet.switch</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">form</field>
        <field name="context">{'end_work': True}</field>
    </record>

    <menuitem id="hr_timesheet_switch_menu"
              name="Start work"
              action="hr_timesheet_switch_action"
              parent="hr_timesheet.menu_hr_time_tracking"
              groups="hr_timesheet.group_hr_timesheet_user"
              sequence="10"/>
</data>