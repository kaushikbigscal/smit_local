<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom paper format: 6x4 inch label -->
    <record id="paperformat_lead_label_6x4" model="report.paperformat">
        <field name="name">Lead 6x4 Label</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">152</field> <!-- 4 inch -->
        <field name="page_width">102</field>  <!-- 6 inch -->
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>

    <!-- Report action for Lead -->
    <record id="action_report_lead_label" model="ir.actions.report">
        <field name="name">Lead QR Label</field>
        <field name="model">crm.lead</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">all_module_timesheet.report_lead_label</field>
        <field name="report_file">all_module_timesheet.report_lead_label</field>
        <field name="binding_model_id" ref="crm.model_crm_lead"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="all_module_timesheet.paperformat_lead_label_6x4"/>
        <field name="print_report_name">'Lead-Label-%s' % (object.name or 'Unknown')</field>
    </record>

    <!-- QWeb Template for Lead QR Label -->
    <template id="report_lead_label">
        <t t-foreach="docs" t-as="lead">
            <main style="margin:0; padding:0;">
                <div class="page"
                     style="margin:0; padding:0; width:100%; height:100%; box-sizing:border-box; border:2mm solid black;">

                    <table style="width:100%; height:100%; border-collapse: collapse; font-family: sans-serif;">
                        <tr>
                            <!-- LEFT: QR Code -->
                            <td style="width: 94mm; border-right: 1px solid black; text-align: center; vertical-align: middle;">
                                <img t-att-src="'/report/barcode/?type=QR&amp;value=' + (lead.name or 'NoName') + '&amp;width=300&amp;height=300'"
                                     style="width:92mm; height:92mm; object-fit:contain;"/>
                            </td>

                            <!-- RIGHT: Two-Section Vertical Layout (ROTATED 90 DEGREES) -->
                            <td style="width:54mm; padding:0; font-size:11px; vertical-align:middle; position:relative; overflow:hidden;">
                                <div style="
                                    transform: rotate(-90deg);
                                    transform-origin: center center;
                                    position: absolute;
                                    left: 50%;
                                    top: 50%;
                                    margin-left: -70mm;
                                    margin-top: -27mm;
                                    width: 140mm;
                                    height: 54mm;
                                ">
                                    <div style="display:flex; flex-direction:column; height:100%; justify-content:space-between;">

                                        <!-- ðŸ”¹ TOP SECTION -->
                                        <div style="height:48%; border-bottom:1px solid #000; padding-bottom:3mm;">
                                            <div style="margin-bottom: 3mm;">
                                                <strong style="font-size: 16px;">Lead Name</strong>
                                                <br/>
                                                <span t-esc="lead.name or '-'"/>
                                            </div>
                                            <div style="margin-bottom: 3mm;">
                                                <strong>Contact Name</strong>
                                                <br/>
                                                <span t-esc="lead.contact_name or '-'"/>
                                            </div>
                                            <div style="margin-bottom: 3mm;">
                                                <strong>Company</strong>
                                                <br/>
                                                <span t-esc="lead.partner_name or '-'"/>
                                            </div>
                                            <div>
                                                <strong>Email</strong>
                                                <br/>
                                                <span t-esc="lead.email_from or '-'"/>
                                            </div>
                                        </div>

                                        <!-- ðŸ”¹ BOTTOM SECTION -->
                                        <div style="height:48%; padding-top:3mm;">
                                            <div style="margin-bottom: 3mm;">
                                                <strong>Phone</strong>
                                                <br/>
                                                <span t-esc="lead.phone or lead.mobile or '-'"/>
                                            </div>
                                            <div style="margin-bottom: 3mm;">
                                                <strong>Stage</strong>
                                                <br/>
                                                <span t-esc="lead.stage_id.name or '-'"/>
                                            </div>
                                            <div>
                                                <strong>Assigned To</strong>
                                                <br/>
                                                <span t-esc="lead.user_id.name or '-'"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </main>
        </t>
    </template>
</odoo>


