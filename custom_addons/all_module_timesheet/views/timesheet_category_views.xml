<odoo>
    <data>
        <!-- Form View -->
        <record id="view_timesheet_category_form" model="ir.ui.view">
            <field name="name">custom.timesheet.category.form</field>
            <field name="model">custom.timesheet.category</field>
            <field name="arch" type="xml">
                <form string="Timesheet Category" create="False">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="entry_count" readonly="1"/>
                                <field name="module_name"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Technical Details">
                                <group>
                                    <field name="model_names" placeholder="model1,model2,model3"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_timesheet_category_tree" model="ir.ui.view">
            <field name="name">custom.timesheet.category.tree</field>
            <field name="model">custom.timesheet.category</field>
            <field name="arch" type="xml">
                <tree string="Timesheet Categories" create="False">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="entry_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_timesheet_category" model="ir.actions.act_window">
            <field name="name">Timesheet Categories</field>
            <field name="res_model">custom.timesheet.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_timesheet_settings"
                  name="Settings"
                  parent="hr_timesheet.hr_timesheet_menu_configuration"
                  action="hr_timesheet.hr_timesheet_config_settings_action"
                  sequence="10"/>

        <menuitem id="menu_timesheet_categories"
                  name="Categories"
                  parent="hr_timesheet.hr_timesheet_menu_configuration"
                  action="action_timesheet_category"
                  sequence="20"/>
    </data>
</odoo>
