<templates>
    <t t-name="monthly_attendance_report.CustomListView">
        <style>
            /* Main container with balanced spacing */
            .o_monthly_attendance_report_dashboard {
                padding: 2rem 1.5rem 0 1.5rem;
                width: 100%;
                max-width: 100%;
                margin: 0 auto;
            }

            /* Container fluid adjustment */
            .o_monthly_attendance_report_dashboard .container-fluid {
                padding-left: 0;
                padding-right: 0;
                max-width: 98%; /* Slightly less than full width */
            }

            /* Row adjustments for perfect spacing */
            .o_monthly_attendance_report_dashboard .row {
                margin-left: -0.75rem;
                margin-right: -0.75rem;
            }

            /* Column padding - increased for better spacing */
            .o_monthly_attendance_report_dashboard .row > [class*="col-"] {
                padding-left: 0.75rem;
                padding-right: 0.75rem;
            }

            /* Button container */
            .button-container {
                padding-right: 0;
                display: flex;
                justify-content: flex-end;
                gap: 0.5rem;
            }

            /* Compact download button */
            .btn-download {
                min-width: 38px;
                padding: 0 0.5rem;
            }

            /* Month filter styling */
            .month-filter-container {
                position: relative;
            }
            .month-filter-container input[type="month"] {
                width: 100%;
                height: 42px;
                padding: 0.375rem 0.75rem;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                background-color: #fff;
                cursor: pointer;
            }
            .month-filter-container input[type="month"]::-webkit-calendar-picker-indicator {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                width: 100%;
                height: 100%;
                color: transparent;
                background: transparent;
                cursor: pointer;
            }
            .month-filter-container input[type="month"]::before {
                content: attr(placeholder);
                color: #6c757d;
            }
            .month-filter-container input[type="month"]:focus::before {
                content: '';
            }

            /* Label styling */
            .o_field_widget label {
                display: block;
                margin-bottom: 3px;
                font-weight: 500;
            }

            /* Dropdown container */
            .o_field_many2many_tags.border {
                border: 1px solid #dee2e6;
                border-radius: 4px;
                cursor: pointer;
                min-height: 38px;
                padding: 0.375rem 2.5rem 0.375rem 0.75rem;
                background: #fff;
                position: relative;
                transition: border-color 0.15s ease-in-out;
                display: flex;
                align-items: flex-start;
            }

            .o_field_many2many_tags.border:hover {
                border-color: #86b7fe;
            }

            /* Tag selection area */
            .o_field_many2many_tags_selection {
                display: flex;
                flex-wrap: wrap;
                gap: 0.25rem;
                max-width: 100%;
                align-items: flex-start;
                width: 100%;
            }

            /* Input dropdown container */
            .o_input_dropdown {
                display: flex;
                flex-wrap: wrap;
                gap: 0.25rem;
                align-items: flex-start;
                width: 100%;
            }

            /* Badge/tag styling */
            .o_field_many2many_tags_selection .badge,
            .o_input_dropdown .badge {
                margin: 0.125rem 0;
                flex: 0 0 auto;
                box-sizing: border-box;
                font-size: 0.875rem;
                font-weight: 500;
                padding: 0.25rem 0.5rem;
                border-radius: 0.25rem;
                display: inline-flex;
                align-items: center;
                line-height: 1.2;
                height: auto;
                max-width: 100%;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            /* Tag colors */
            .badge-info {
                background-color: #d1e7ff;
                color: #084298;
                border: 1px solid #b6d4fe;
            }

            /* Dropdown button */
            .o_dropdown_button {
                position: absolute;
                right: 0.75rem;
                top: 50%;
                transform: translateY(-50%);
                pointer-events: none;
                color: #6c757d;
                font-size: 0.9rem;
                z-index: 1;
            }

            /* Input field */
            .o_input_dropdown {
                position: relative;
                display: flex;
                flex-wrap: wrap;
                gap: 0.25rem;
                align-items: flex-start;
                width: 100%;
            }

            .o_input {
                border: none;
                outline: none;
                flex: 1;
                min-width: 60px;
                padding: 0;
                margin: 0;
                background: transparent;
                cursor: pointer;
                height: 1.5rem;
                line-height: 1.5;
                margin-top: 0.125rem; /* Slight top margin to align with badges */
            }

            /* Dropdown menu */
            .o_dropdown_menu {
                position: absolute !important;
                z-index: 1050 !important;
                background: #fff;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
                width: 100% !important;
                max-height: 210px;
                overflow-y: auto;
                left: 0;
                top: 100%;
                margin-top: 0.25rem;
                padding: 0.25rem 0;
            }

            /* Dropdown items */
            .o_dropdown_menu .o_dropdown_item {
                padding: 0.5em 1em;
                cursor: pointer;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .o_dropdown_menu .o_dropdown_item:hover {
                background-color: #f8f9fa;
            }

            /* Delete button in tags */
            .o_delete {
                margin-left: 0.375rem;
                cursor: pointer;
                font-size: 1rem;
                line-height: 1;
                opacity: 0.7;
                font-weight: bold;
            }

            .o_delete:hover {
                opacity: 1;
            }

            /* Button styling */
            .btn {
                height: 38px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            /* Table container for mobile scrolling */
            .table-container {
                max-height: calc(100vh - 250px); /* Adjust based on header height */
                overflow-y: auto;
                overflow-x: auto;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                background: white;
                position: relative;
                /* Add matching padding to align with filters */
                margin-left: 0.75rem;
                margin-right: 0.75rem;
            }

            /* Mobile specific adjustments */
            @media (max-width: 768px) {
                .o_monthly_attendance_report_dashboard {
                    padding: 1rem 0.5rem 0 0.5rem;
                }

                .table-container {
                    max-height: calc(100vh - 220px);
                    margin-top: 1rem;
                    /* Reduce margin on mobile to match the dashboard padding */
                    margin-left: 0.5rem;
                    margin-right: 0.5rem;
                }

                /* Make table responsive with horizontal scroll */
                .table-container table {
                    min-width: 800px; /* Minimum width to ensure readability */
                }

                /* Sticky table header */
                .table-container thead th {
                    position: sticky;
                    top: 0;
                    background: white;
                    z-index: 10;
                    border-bottom: 2px solid #dee2e6;
                }
            }

            /* Responsive adjustments */
            @media (max-width: 992px) {
                .o_field_many2many_tags_selection .badge,
                .o_input_dropdown .badge {
                    flex: 0 0 auto;
                    max-width: calc(100% - 1rem);
                }
            }

            /* Remove any extra spacing from field widgets */
            .o_field_widget .o_field_many2many_tags {
                margin-bottom: 0;
            }

            /* Ensure consistent height for all form controls */
            .o_field_many2many_tags.border {
                min-height: 38px;
                height: auto; /* Allow expansion */
            }

            .form-control {
                height: 38px;
                display: flex;
                align-items: center;
            }

            /* When container has multiple badges, adjust padding */
            .o_field_many2many_tags.border:has(.badge + .badge),
            .o_field_many2many_tags.border:has(.o_field_many2many_tags_selection .badge) {
                padding-top: 0.25rem;
                padding-bottom: 0.25rem;
            }
            .month-filter-container {
                position: relative;
            }

            .month-filter-container .calendar-icon {
                position: absolute;
                right: 0.75rem;
                top: 50%;
                transform: translateY(-50%);
                pointer-events: none;
                color: #6c757d;
                font-size: 0.9rem;
                z-index: 1;
            }
        </style>

        <div class="o_monthly_attendance_report_dashboard">
            <h2 class="text-center mb-4">Monthly Attendance Report</h2>
            <div class="container-fluid">
                <div class="row mb-4 align-items-end">
                    <div class="col-md-3 o_field_widget month-filter-container">
                        <label for="month_filter_input">Month:</label>
<!--                        <input type="month" class="form-control" id="month_filter_input" t-ref="month_filter_input"/>-->
                        <div class="position-relative">
                            <input type="month" class="form-control" id="month_filter_input"
                                   t-ref="month_filter_input"/>
                            <span class="calendar-icon">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 o_field_widget position-relative">
                        <label for="department_filter_input">Department:</label>
                        <div class="o_field_many2many_tags border rounded" t-ref="department_filter_input">
                            <div class="o_field_widget o_field_many2many_tags o_quick_editable" role="combobox">
                                <div class="o_field_many2many_selection">
                                    <div class="o_input_dropdown">
                                        <input type="text" class="o_input" placeholder="Select Departments..." t-ref="department_input"/>
                                    </div>
                                </div>
                                <div class="o_field_many2many_tags_selection flex-wrap" t-ref="department_tags"/>
                                <span class="o_dropdown_button" role="button">▼</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 o_field_widget position-relative">
                        <label for="employee_filter_input">Employee:</label>
                        <div class="o_field_many2many_tags border rounded" t-ref="employee_filter_input">
                            <div class="o_field_widget o_field_many2many_tags o_quick_editable" role="combobox">
                                <div class="o_field_many2many_selection">
                                    <div class="o_input_dropdown">
                                        <input type="text" class="o_input" placeholder="Select Employees..." t-ref="employee_input"/>
                                    </div>
                                </div>
                                <div class="o_field_many2many_tags_selection flex-wrap" t-ref="employee_tags"/>
                                <span class="o_dropdown_button" role="button">▼</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 button-container" style="padding-top: 8px;">
                        <button type="button" class="btn btn-primary" t-on-click="onViewClicked" t-ref="view_report_button">
                            View
                        </button>
                        <button type="button" class="btn btn-primary btn-download" t-on-click="onDownloadClicked"
                                t-ref="download_report_button" title="Download Detailed Report">
                            <i class="fa fa-download"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="table-container">
                <div t-ref="tree_view_container" class="mt-0"></div>
                <div t-ref="report_data_container_ref" class="mt-0"></div>
            </div>
        </div>
    </t>
</templates>