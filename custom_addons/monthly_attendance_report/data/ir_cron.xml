<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action for Daily Attendance Check -->
        <record id="ir_cron_attendance_correction_check" model="ir.cron">
            <field name="name">Attendance Correction Check</field>
            <field name="model_id" ref="model_temp_attendance_correction"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_attendance_check()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now()).replace(hour=19, minute=0, second=0)"/>
        </record>
    </data>
</odoo>