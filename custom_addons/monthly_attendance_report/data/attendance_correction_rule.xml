<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Security Rules -->

    <!-- Rule 1: Normal Users - Only their own records -->
    <record id="attendance_correction_user_own_rule" model="ir.rule">
        <field name="name">Attendance Correction: User Own Records Only</field>
        <field name="model_id" ref="model_temp_attendance_correction"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_attendance.group_hr_attendance_own_reader'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

