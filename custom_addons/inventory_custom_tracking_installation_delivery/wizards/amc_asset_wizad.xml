<!-- views/amc_contract_asset_line_wizard_views.xml -->

<odoo>
    <record id="view_amc_contract_asset_line_wizard" model="ir.ui.view">
        <field name="name">amc.contract.asset.line.wizard.form</field>
        <field name="model">amc.contract.asset.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Add AMC Contract Asset Line">
                <group>
                    <field name="available_product_ids" invisible="1"/>
                    <field name="product_category"/>
                    <field name="product_id"/>

<!--                    <field name="part_product_id"/>-->
                    <field name="visit" invisible="1"/>
                    <field name="currency_id"/>
                    <field name="quantity"/>
                    <field name="cost" sum="Total"/>
                    <field name="tax_ids" widget="many2many_tags"/>
                    <field name="track_by_serial_number"/>
                    <field name="user_ids"/>

                </group>

                <footer>
                    <button string="Add" type="object" name="action_add_line" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_open_amc_contract_asset_line_wizard" model="ir.actions.act_window">
        <field name="name">Add Contract Asset Line</field>
        <field name="res_model">amc.contract.asset.line.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> <!-- This makes it a wizard popup -->
        <field name="context">{'default_contract_id': active_id}</field>
    </record>


</odoo>
