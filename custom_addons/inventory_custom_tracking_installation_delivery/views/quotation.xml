    <record id="view_order_form_amc" model="ir.ui.view">
        <field name="name">sale.order.form.amc</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Example: Add AMC field after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_amc" invisible="1"/>

                <field name="amc_contract_id" invisible="not is_amc"/>
            </xpath>
            <xpath expr="//field[@name='warranty_start_date']" position="attributes">
                <attribute name="invisible">is_amc</attribute>
            </xpath>


        </field>
    </record>
