<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_part_history_tree" model="ir.ui.view">
        <field name="name">part.history.tree</field>
        <field name="model">part.history</field>
        <field name="arch" type="xml">
            <tree string="Parts History" create="0" delete="0">
                <!--                <field name="part_name"/>-->
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="task_id" widget="many2one_clickable"/>
                <field name="mapping_id" widget="many2one_clickable"/>
                <field name="serial_number_ids" widget="many2one_tags"
                       context="{'default_product_id':original_product_id }"
                />
                <field name="previous_serial_number_ids" widget="many2one_tags"
                       context="{'default_product_id':original_product_id }"
                />
                <field name="part_service_type"/>
                <field name="description"/>
                <field name="date_time"/>
                <field name="action"/>
                <field name="original_product_id" column_invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="view_part_history_search" model="ir.ui.view">
        <field name="name">part.history.search</field>
        <field name="model">part.history</field>
        <field name="arch" type="xml">
            <search string="Part History Search">

                <!-- Search Fields -->
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="task_id"/>
                <field name="mapping_id"/>
                <field name="serial_number_ids"/>
                <field name="previous_serial_number_ids"/>
                <field name="part_service_type"/>
                <field name="action"/>

                <!-- Filters -->
                <filter name="filter_today" string="Today"
                        domain="[('date_time','&gt;=',context_today().strftime('%Y-%m-%d 00:00:00')),
                         ('date_time','&lt;=',context_today().strftime('%Y-%m-%d 23:59:59'))]"/>

                <separator/>

                <filter name="filter_customer" string="Customer in" domain="[('customer_id', 'in', [])]"/>
                <filter name="filter_product" string="Part in" domain="[('product_id', 'in', [])]"/>

                <separator/>

                <filter name="filter_replace" string="Replaced Part" domain="[('part_service_type','=','replace')]"/>
                <filter name="filter_repair" string="Repaired Part" domain="[('part_service_type','=','repair')]"/>

                <separator/>

                <filter name="filter_created" string="Created" domain="[('action','=','create')]"/>
                <filter name="filter_updated" string="Updated" domain="[('action','=','update')]"/>
                <filter name="filter_deleted" string="Deleted" domain="[('action','=','delete')]"/>

                <separator/>

                <filter string="Start Date" name="start_date" date="date_time"/>
                <filter string="End Date" name="end_date" date="date_time"/>


                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter name="group_by_customer" string="Customer" context="{'group_by':'customer_id'}"/>
                    <filter name="group_by_product" string="Part" context="{'group_by':'product_id'}"/>
                    <filter name="group_by_task_id" string="Related Call" context="{'group_by':'task_id'}"/>
                    <filter name="group_by_mapping_id" string="Customer Product Mapping"
                            context="{'group_by':'mapping_id'}"/>
                    <filter name="group_by_part_service_type" string="Part Service Type"
                            context="{'group_by':'part_service_type'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by':'date_time'}"/>
                </group>

            </search>
        </field>
    </record>


    <!-- Form View -->
    <record id="view_part_history_form" model="ir.ui.view">
        <field name="name">part.history.form</field>
        <field name="model">part.history</field>
        <field name="arch" type="xml">
            <form string="Part History">
                <sheet>
                    <group>
                        <group>
                            <!--                            <field name="part_id"/>-->
                            <!--                            <field name="part_name"/>-->
                            <!--                            <field name="part_name"/>-->
                            <field name="product_id"/>
                            <field name="customer_id"/>
                            <field name="task_id" widget="many2one_clickable"/>
                            <field name="mapping_id"/>
                            <field name="original_product_id" invisible="1"/>
                            <field name="serial_number_ids" widget="many2one_tags"
                                   context="{'default_product_id':original_product_id }"
                            />
                            <field name="previous_serial_number_ids" widget="many2one_tags"
                                   context="{'default_product_id':original_product_id }"
                            />
                        </group>
                        <group>
                            <field name="part_service_type"/>
                            <field name="description"/>
                            <field name="date_time"/>
                            <field name="action"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action and Menu Items -->
    <record id="action_part_history" model="ir.actions.act_window">
        <field name="name">Parts History</field>
        <field name="res_model">part.history</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Track all parts changes across calls
            </p>
        </field>
    </record>

    <menuitem id="menu_part_history" name="Parts History" parent="industry_fsm.fsm_menu_settings"
              action="action_part_history" sequence="3"/>

</odoo>