<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_is_amc" model="ir.ui.view">
        <field name="name">account.move.form.is_amc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add the field under the invoice information section -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="amc_contract_id" invisible="not is_amc" readonly="1"/>
                <!-- Your custom fields go here -->
                <field name="is_amc" readonly="1" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
