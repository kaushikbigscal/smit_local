<odoo>
<record id="view_sunday_attendance_tree" model="ir.ui.view">
    <field name="name">hr.sunday.attendance.tree</field>
    <field name="model">hr.sunday.attendance</field>
    <field name="arch" type="xml">
        <tree string="Sunday Attendance">
            <field name="employee_id"/>
            <field name="check_in"/>
            <field name="check_out"/>
            <field name="work_hours"/>
            <field name="counter"/>
             <field name="state" widget="badge" decoration-warning="state == 'refuse'" decoration-success="state == 'validate'"/>
                <button string="Validate" name="action_validate" type="object"
                    icon="fa-check" invisible="state != 'draft'"
                    groups="hr_holidays.group_hr_holidays_user"/>
                <button string="Refuse" name="action_refuse" type="object"
                    icon="fa-times" invisible="state != 'draft'"
                    groups="hr_holidays.group_hr_holidays_user"/>
        </tree>
    </field>
</record>

<record id="action_sunday_attendance" model="ir.actions.act_window">
    <field name="name">Sunday Attendance</field>
    <field name="type">ir.actions.act_window</field>
    <field name="view_mode">tree</field>
    <field name="res_model">hr.sunday.attendance</field>
</record>

<menuitem id="menu_hr_sunday_attendance"
          name="Sunday Attendance"
          parent="hr_attendance.menu_hr_attendance_root"
          action="action_sunday_attendance"
          sequence="15" groups="hr_attendance.group_hr_attendance_officer"/>
</odoo>