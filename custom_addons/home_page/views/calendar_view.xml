<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the default calendar view directly -->
    <record id="calendar_event_view_calendar_dashboard" model="ir.ui.view">
        <field name="name">calendar.event.calendar.dashboard</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="js_class">calendar_dashboard</attribute>
                <attribute name="color">event_origin</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit the calendar.event form -->
    <record model="ir.ui.view" id="view_calendar_event_form_inherit_origin">
      <field name="name">calendar.event.form.origin</field>
      <field name="model">calendar.event</field>
      <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='start']" position="after">
              <field name="event_origin"/>
          </xpath>
      </field>
    </record>


    <!-- Update the existing calendar action to enable dashboard -->
    <record id="calendar.action_calendar_event" model="ir.actions.act_window">
        <field name="context">{'show_dashboard': True}</field>
    </record>

</odoo>