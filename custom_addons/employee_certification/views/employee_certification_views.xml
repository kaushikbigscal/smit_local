<odoo>
    <data>
    <record id="view_employee_certification_tree" model="ir.ui.view">
        <field name="name">view.employee.certification.tree</field>
        <field name="model">employee.certification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="certification_date"/>
<!--                <field name="expiry_date"/>-->
                <field name="expiry_date_time"/>
                <field name="state"/>
                <field name="employee_id"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_certification_form" model="ir.ui.view">
        <field name="name">view.employee.certification.form</field>
        <field name="model">employee.certification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="certification_date"/>
<!--                        <field name="expiry_date"/>-->
                        <field name="expiry_date_time"/>
                        <field name="state" readonly="1"/>
                        <field name="employee_id" />

                    </group>
                    <group>

                        <field name="certificate_file" widget="image"/>
                    </group>

                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>

     <record id="action_employee_certification" model="ir.actions.act_window">
        <field name="name">Employee Certifications</field>
        <field name="res_model">employee.certification</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No employee certifications yet.
            </p>
        </field>
    </record>

    <!-- Menu Item for Managers to view and manage certifications -->
    <menuitem id="menu_employee_certification_root"
              name="Employee Certifications"/>

    <menuitem id="menu_employee_certification"
              name="Certifications"
              parent="menu_employee_certification_root"
              action="action_employee_certification"/>
</data>
</odoo>
