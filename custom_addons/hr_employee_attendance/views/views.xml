<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="late_day_in_notification" model="ir.ui.view">
        <field name="name">late.day.in.notification</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='minute_allowed']" position="after">
                <div class="col-lg-12 col-12 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="notification_late_day_in"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="notification_late_day_in"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

    <record id="view_menu_form_inherit_quick_action" model="ir.ui.view">
        <field name="name">ir.ui.menu.form.view.quick_action</field>
        <field name="model">ir.ui.menu</field>
        <field name="inherit_id" ref="base.edit_menu_access"/>
        <field name="arch" type="xml">
            <!-- Target the Sequence field and insert below it -->
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="is_quick"/>
            </xpath>
        </field>
    </record>



</odoo>