<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="0">
        <record id="rule_banner_image_portal" model="ir.rule">
            <field name="name">Portal: Banner Images</field>
            <field name="model_id" ref="model_res_company_banner_image"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
        <record id="rule_attachment_read_portal" model="ir.rule">
            <field name="name">Portal: Read Attachments</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="domain_force">[
                ('res_model', '=', 'res.company'),
                ('res_id', '!=', False),
                ('public', '=', True)
                ]
            </field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>
