<odoo>
    <record id="view_company_form_customer_portal" model="ir.ui.view">
        <field name="name">res.company.form.inherit.customer.portal</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='branches']" position="after">
                <page name="customer_app" string="Customer Portal">
                    <group>
                        <group name="Portal">
                            <field name="enable_customer_portal"/>
                            <field name="enable_set_banner" invisible="not enable_customer_portal"/>
                            <field name="image" invisible="not enable_set_banner" widget="many2many_binary"/>
                        </group>
                        <group>
                            <field name="enable_qr_code_scanner" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
