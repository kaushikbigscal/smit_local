<odoo>
    <record id="view_task_form_feedback_tab" model="ir.ui.view">
        <field name="name">project.task.form.inherit.customer.app.feedback</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.view_task_form2_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Feedback" name="feedback_tab" invisible="not is_fsm">
                    <field name="feedback_message_ids" readonly="1">
                        <tree>
                            <field name="date"/>
                            <field name="author_id"/>
                            <field name="subject"/>
                            <field name="body" widget="html"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
        <!-- Tree View -->
    <record id="view_feedback_notification_tree" model="ir.ui.view">
        <field name="name">feedback.notification.tree</field>
        <field name="model">feedback.notification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="feedback_status"/>
                <field name="user_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_feedback_notification_form" model="ir.ui.view">
        <field name="name">feedback.notification.form</field>
        <field name="model">feedback.notification</field>
        <field name="arch" type="xml">
            <form string="Feedback Notification">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="feedback_status" widget="radio"/>
                        <field name="user_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_feedback_notification" model="ir.actions.act_window">
        <field name="name">Feedback Notifications</field>
        <field name="res_model">feedback.notification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_feedback_notification"
              name="Feedback Notification"
              sequence="50"
              action="customer_app.action_feedback_notification"
              groups="industry_fsm.group_fsm_manager"
              parent="industry_fsm.fsm_menu_settings"/>

</odoo>
