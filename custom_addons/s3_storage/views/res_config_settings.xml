<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.s3_storage</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="priority" eval="75"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="s3_storage" string="S3 Storage" name="s3_storage"
                     groups="base.group_system">

                    <block title="S3 Configuration" id="s3_configuration">

                        <setting name="Attachment Location"
                                 help="Choose where to store attachments">
                            <field name="attachment_location" widget="radio"/>
                        </setting>

                        <setting name="S3 Bucket"
                                 help="Specify your AWS S3 bucket name">
                            <field name="s3_bucket"/>
                        </setting>

                        <setting name="AWS Region"
                                 help="Select the AWS region where your bucket is located">
                            <field name="aws_region_name"/>
                        </setting>

                        <setting name="AWS Endpoint"
                                 help="Enter the endpoint URL for AWS S3">
                            <field name="aws_endpoint_url"/>
                        </setting>

                        <setting name="AWS Access Key"
                                 help="Enter your AWS access key ID">
                            <field name="aws_access_key_id"/>
                        </setting>

                        <setting name="AWS Secret Key"
                                 help="Enter your AWS secret access key">
                            <field name="aws_secret_access_key"/>
                        </setting>

                        <setting name="AWS API Version"
                                 help="Specify the version of the AWS API to use">
                            <field name="aws_api_version"/>
                        </setting>

                        <setting name="Use SSL"
                                 help="Enable or disable SSL for connections">
                            <field name="aws_use_ssl"/>
                        </setting>

                        <setting name="Verify SSL"
                                 help="Verify SSL certificates">
                            <field name="aws_verify"/>
                        </setting>

                        <setting name="Delete on Remove"
                                 help="Automatically delete attachments from S3 when removed">
                            <field name="s3_delete"/>
                        </setting>

                        <setting name="Enable Cache"
                                 help="Cache S3 responses for improved performance">
                            <field name="s3_cache"/>
                        </setting>

                        <setting name="Migrate Attachments"
                                 help="Migrate existing attachments to S3 storage">
                            <button name="action_migrate_attachments_to_filestore"
                                    string="Migrate Attachments to Filestore"
                                    type="object"
                                    class="btn btn-primary"/>
                        </setting>

                    </block>

                </app>
            </xpath>
        </field>
    </record>
</odoo>



