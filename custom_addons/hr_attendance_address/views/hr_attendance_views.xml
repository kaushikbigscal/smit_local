<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <field name="check_in" position="after">
                <field name="check_in_address" />
            </field>
            <field name="check_out" position="after">
                <field name="check_out_address" />
            </field>
        </field>
    </record>

    <record id="hr_attendance_view_tree_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.tree.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="check_in" position="after">
                <field name="check_in_address" readonly="1"/>
            </field>
            <field name="check_out" position="after">
                <field name="check_out_address" readonly="1"/>
            </field>
        </field>
    </record>
</odoo>