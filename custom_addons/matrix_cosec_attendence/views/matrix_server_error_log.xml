<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_matrix_server_error_log_tree" model="ir.ui.view">
        <field name="name">matrix.server.error.log.tree</field>
        <field name="model">matrix.server.error.log</field>
        <field name="arch" type="xml">
            <tree string="Matrix Server Error Logs" import="0" create="false">
                <field name="event_datetime"/>
                <field name="reason"/>
            </tree>
        </field>
    </record>


    <record id="action_matrix_server_error_log" model="ir.actions.act_window">
        <field name="name">Server Error Logs</field>
        <field name="res_model">matrix.server.error.log</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No error logs found.
            </p>
        </field>
    </record>

    <!-- Optional: parent menu -->

    <!-- Submenu for Error Logs -->
    <menuitem id="menu_matrix_server_error_log"
              name="Server Error Logs"
              parent="biometric_log_menu"
              action="action_matrix_server_error_log"
              sequence="20"/>
</odoo>
