    <record id="view_it_declaration_form" model="ir.ui.view">
        <field name="name">it.declaration.form</field>
        <field name="model">it.declaration.payslip</field>
        <field name="arch" type="xml">
            <form string="IT Declaration">
                <header>
                    <field name="status" invisible="1"/>
                    <field name="status" widget="statusbar"
                           groups="om_hr_payroll.group_hr_payroll_manager"/>
                    <button string="Submit" name="submit" type="object"
                            class="oe_highlight"
                            invisible="status != 'unlocked'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="employee_id" class="oe_edit_only"/>
                        <h1>
                            <field name="employee_id"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="financial_year" string="Financial Year" required="1"/>
         
                            <div class="o_form_label" colspan="2" style="font-style: italic; color:red;">
                                * You can enter information in below sections to compare tax liability under both the
                                regime. Select your regime for salary calculation.
                            </div>

                            <field name="tax_regime" widget="radio"
                                   required="1" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="grand_total" string="Total" invisible="1"/>
                            <field name="gratuity_from_previous_system"
                                   string="Accumulated Gratuity(From previous system)" invisible="1"/>
                        </group>
                    </group>
