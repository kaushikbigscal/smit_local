<?xml version="1.0"?>
<odoo>

    <record id="view_inherit_sequence_reset_sequence" model="ir.ui.view">
        <field name="name">view.inherit.sequence.reset.sequence</field>
        <field name="model">ir.sequence</field>
        <field name="inherit_id" ref="base.sequence_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sequence']//group//group/field[@name='number_next_actual']" position="after">
                <field name="reset_sequence" widget="radio"/>
            </xpath>
        </field>
    </record>

    <record id="ir_cron_reset_sequence_monthly" model="ir.cron">
        <field name="name">Reset Sequences Monthly or Yearly</field>
        <field name="model_id" ref="base.model_ir_sequence"/>
        <field name="state">code</field>
        <field name="code">model.reset_sequence_number()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=18, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="active" eval="True"/>
    </record>


</odoo>
